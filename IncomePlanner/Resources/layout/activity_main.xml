<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/linearLayoutTxtGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Annual Income Planner"
            android:textSize="@dimen/mtrl_calendar_title_baseline_to_top"
            android:gravity="center"/>

	    <com.google.android.material.textfield.TextInputLayout
		    android:id="@+id/dropdown_menu"
		    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"					       
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            >
		    <!-- Google themselves instruct us to use the deprecated editable attribute -->
		    <AutoCompleteTextView
			    android:id="@+id/dropdown_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
			    android:editable="false"/>
	    </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextLayoutDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Days"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

          <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextLayoutPhp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Basic pay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

          <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextBasicPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
              />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tax rate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

          <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTaxRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
        />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Savings rate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

          <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextSavingsRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Basic Pay:"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="normal"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/textViewBasicPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="right"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="bold"
                    android:padding="3dip"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="SSS Contribution:"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="normal"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/textViewSSS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="right"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="bold"
                    android:padding="3dip"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="PhilHealth Contribution:"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="normal"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/textViewPhilHealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="right"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="bold"
                    android:padding="3dip"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="PAG-IBIG Contribution:"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="normal"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/textViewPagIbig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="right"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="bold"
                    android:padding="3dip"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Income Tax:"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="normal"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/textViewIncomeTax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="right"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="bold"
                    android:padding="3dip"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Total Deductions:"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="normal"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/textViewTotalDeductions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="right"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="bold"
                    android:padding="3dip"/>
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Savings:"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="normal"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/textViewSavings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="right"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="bold"
                    android:padding="3dip"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Net Pay:"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="normal"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/textViewNetPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="right"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textStyle="bold"
                    android:padding="3dip"/>
            </TableRow>


        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">       
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginRight="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            app:icon="@drawable/abc_ic_clear_material"
            />

    </LinearLayout>



</LinearLayout>